default_platform(:ios)

platform :ios do
  desc "Run tests"
  lane :test do
    run_tests(
      project: "Espressokarte.xcodeproj",
      scheme: "Espressokarte",
      device: "iPhone 17",
      code_coverage: true,
      result_bundle: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    if ENV["CI"]
      # Use the keychain created by the workflow
      keychain_path = ENV["KEYCHAIN_PATH"]
      unlock_keychain(
        path: keychain_path,
        password: ENV["KEYCHAIN_PASSWORD"]
      ) if keychain_path
    end

    # Set build number from GitHub run number
    build_number = ENV["BUILD_NUMBER"] || Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(
      build_number: build_number,
      xcodeproj: "Espressokarte.xcodeproj"
    )

    # Also update share extension build number
    update_info_plist(
      plist_path: "EspressokarteShare/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = build_number
      end
    )

    # Create App Store Connect API key from environment
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    # Configure manual signing for both targets
    app_profile = ENV["APP_PROFILE_NAME"] || "Espressokarte Appstore"
    share_profile = ENV["SHARE_PROFILE_NAME"] || "Espressokarte Share AppStore"

    update_code_signing_settings(
      path: "Espressokarte.xcodeproj",
      use_automatic_signing: false,
      team_id: "R5Q99LLTGQ",
      targets: ["Espressokarte"],
      profile_name: app_profile,
      code_sign_identity: "Apple Distribution"
    )

    update_code_signing_settings(
      path: "Espressokarte.xcodeproj",
      use_automatic_signing: false,
      team_id: "R5Q99LLTGQ",
      targets: ["EspressokarteShare"],
      profile_name: share_profile,
      code_sign_identity: "Apple Distribution"
    )

    build_app(
      project: "Espressokarte.xcodeproj",
      scheme: "Espressokarte",
      export_method: "app-store",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.timokuehne.Espressokarte" => app_profile,
          "com.timokuehne.Espressokarte.EspressokarteShare" => share_profile
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and upload to TestFlight for external testers"
  lane :beta_external do
    if ENV["CI"]
      keychain_path = ENV["KEYCHAIN_PATH"]
      unlock_keychain(
        path: keychain_path,
        password: ENV["KEYCHAIN_PASSWORD"]
      ) if keychain_path
    end

    # Set build number from GitHub run number
    build_number = ENV["BUILD_NUMBER"] || Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(
      build_number: build_number,
      xcodeproj: "Espressokarte.xcodeproj"
    )

    # Also update share extension build number
    update_info_plist(
      plist_path: "EspressokarteShare/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = build_number
      end
    )

    # Create App Store Connect API key from environment
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    # Configure manual signing for both targets
    app_profile = ENV["APP_PROFILE_NAME"] || "Espressokarte Appstore"
    share_profile = ENV["SHARE_PROFILE_NAME"] || "Espressokarte Share AppStore"

    update_code_signing_settings(
      path: "Espressokarte.xcodeproj",
      use_automatic_signing: false,
      team_id: "R5Q99LLTGQ",
      targets: ["Espressokarte"],
      profile_name: app_profile,
      code_sign_identity: "Apple Distribution"
    )

    update_code_signing_settings(
      path: "Espressokarte.xcodeproj",
      use_automatic_signing: false,
      team_id: "R5Q99LLTGQ",
      targets: ["EspressokarteShare"],
      profile_name: share_profile,
      code_sign_identity: "Apple Distribution"
    )

    build_app(
      project: "Espressokarte.xcodeproj",
      scheme: "Espressokarte",
      export_method: "app-store",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.timokuehne.Espressokarte" => app_profile,
          "com.timokuehne.Espressokarte.EspressokarteShare" => share_profile
        }
      }
    )

    # Upload to TestFlight and distribute to external testers
    upload_to_testflight(
      api_key: api_key,
      distribute_external: true,
      groups: [ENV["TESTFLIGHT_EXTERNAL_GROUP"] || "External Testers"],
      changelog: ENV["RELEASE_NOTES"] || "New build available for testing"
    )
  end

  desc "Build and upload to App Store"
  lane :release do
    if ENV["CI"]
      keychain_path = ENV["KEYCHAIN_PATH"]
      unlock_keychain(
        path: keychain_path,
        password: ENV["KEYCHAIN_PASSWORD"]
      ) if keychain_path
    end

    # Set build number from GitHub run number
    build_number = ENV["BUILD_NUMBER"] || Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(
      build_number: build_number,
      xcodeproj: "Espressokarte.xcodeproj"
    )

    # Also update share extension build number
    update_info_plist(
      plist_path: "EspressokarteShare/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = build_number
      end
    )

    # Create App Store Connect API key from environment
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    # Configure manual signing for both targets
    app_profile = ENV["APP_PROFILE_NAME"] || "Espressokarte Appstore"
    share_profile = ENV["SHARE_PROFILE_NAME"] || "Espressokarte Share AppStore"

    update_code_signing_settings(
      path: "Espressokarte.xcodeproj",
      use_automatic_signing: false,
      team_id: "R5Q99LLTGQ",
      targets: ["Espressokarte"],
      profile_name: app_profile,
      code_sign_identity: "Apple Distribution"
    )

    update_code_signing_settings(
      path: "Espressokarte.xcodeproj",
      use_automatic_signing: false,
      team_id: "R5Q99LLTGQ",
      targets: ["EspressokarteShare"],
      profile_name: share_profile,
      code_sign_identity: "Apple Distribution"
    )

    build_app(
      project: "Espressokarte.xcodeproj",
      scheme: "Espressokarte",
      export_method: "app-store",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.timokuehne.Espressokarte" => app_profile,
          "com.timokuehne.Espressokarte.EspressokarteShare" => share_profile
        }
      }
    )

    # Upload to App Store
    upload_to_app_store(
      api_key: api_key,
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false,
      automatic_release: false
    )
  end
end
